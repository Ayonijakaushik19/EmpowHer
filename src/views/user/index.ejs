<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="apple-touch-icon" sizes="76x76" href="img/apple-icon.png" />
    <link rel="icon" type="image/png" href="img/favicon.png" />
    <title>Empower</title>
    <!--     Fonts and icons     -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700"
      rel="stylesheet"
    />
    <link
      href="https://use.fontawesome.com/releases/v5.0.6/css/all.css"
      rel="stylesheet"
    />
    <!-- Nucleo Icons -->
    <link href="css/nucleo-icons.css" rel="stylesheet" />
    <link href="css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="css/font-awesome.css" rel="stylesheet" />
    <link href="css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="css/argon.min.css" rel="stylesheet" />
  </head>

  <body class="login-page">
    <!-- Navbar -->
    <%- include("../shared/sidebar.ejs") -%>
    <!-- End Navbar -->
    <!-- Main content -->
    <div class="main-content" id="panel">
      <!-- Topnav -->
      <%- include("../shared/topnav") -%>
      <!-- Header -->
      <!-- Header -->
      <div class="header bg-primary pb-6">
        <div class="container-fluid">
          <div class="header-body">
            <div class="row align-items-center py-4">
              <!-- <div class="col-lg-6 col-7">
                <h6 class="h2 text-white d-inline-block mb-0">Default</h6>
                <nav
                  aria-label="breadcrumb"
                  class="d-none d-md-inline-block ml-md-4"
                >
                  <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item">
                      <a href="#"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Default
                    </li>
                  </ol>
                </nav>
              </div> -->
              <div class="col-lg-12 col-5 text-center">
                <div class="alert alert-secondary alert-with-icon">
                  <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                      <i class="tim-icons icon-simple-remove"></i>
                  </button>
                  <span data-notify="icon" class="tim-icons icon-trophy"></span>
                  <span><b><%= message %></span>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Page content -->

      <div class="container-fluid mt--6">
        <div class="row">
          <!-- Posts -->
          <% for(const post of posts) { %>
          <div class="col-md-6" data-id="<%= post._id %>" id="post-<%= post._id %>">
            <div class="card">
              <% if(post.staticUrl) { %>
              <img
                class="card-img-top"
                src="<%= post.staticUrl %>"
                alt="Card image cap"
                width="100%";
                height="300px";
                style="object-fit: cover;"
              />
              <% } %>
              <div class="card-body">
                <p class="card-text"><%= post.caption %></p>
                <h5 class="card-title"><%= post.category %> by <i><%= post.author.username %></i></h5>
                <button type="submit" class="btn btn-danger">
                  <span class="btn-inner--icon"></span>
                    <i class="ni ni-favourite-28"></i
                  ></span>
                  <span class="btn-inner--text">Like</span>
                </button>

                <% if(post.author.username === user.username) { %>
                <button type="submit" class="btn btn-secondary" onclick="removePost(this, '<%= post._id %>')">
                  <span class="btn-inner--icon"
                    ><i class="ni ni-fat-remove"></i
                  ></span>
                  <span class="btn-inner--text">Remove</span>
                </button>
                <% } %>

                <div class="mt-3">
                  <form action="/comment/<%= post._id %>" method="post">
                    <input type="text" name="comment" class="form-control form-control-muted" placeholder="Comment">
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% } %>
          <!-- Posts -->
        </div>
      </div>
    </div>
    <!--   Core JS Files   -->
    <%- include("../shared/scripts") -%>
    <!-- Delete Post -->
    <script type="text/javascript">
      function removePost(elem, id) {
        fetch(`/post/delete/${id}`, {
          method: "post",
        }).then(response => {
          $(`#post-${id}`).remove();
          $.notify("Post deleted successfully!", {
            autoHide: true,
            autoHideDelay: 5000,
            globalPosition: "bottom center",
            style: "bootstrap",
            className: "success"
          });
        }).catch(err => {
          console.log(err);
        });
      }
    </script>
  </body>
</html>
